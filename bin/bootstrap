#!/bin/bash -e

echo 'Installing node_modules...'
npm install

echo 'Installing bower_components...'
node_modules/.bin/bower install --config.interactive=false --allow-root

echo 'Building server assets...'
node_modules/.bin/cogs -c cogs-server.js

echo 'Building client assets...'
node_modules/.bin/cogs -c cogs-client.js
